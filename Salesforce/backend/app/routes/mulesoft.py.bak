from fastapi import APIRouter, Depends, HTTPException, status, Query
from sqlalchemy.orm import Session
from typing import Optional
import math

from ..database import get_db
from ..auth import get_current_user
from .. import schemas
from ..db_models import User, MulesoftRequest

router = APIRouter(prefix="/api/mulesoft", tags=["mulesoft"])


@router.get("/requests")
async def get_mulesoft_requests(
    page: int = Query(1, ge=1),
    page_size: int = Query(25, ge=1, le=100),
    status_filter: Optional[str] = None,
    db: Session = Depends(get_db),
    current_user: User = Depends(get_current_user)
):
    query = db.query(MulesoftRequest)
    
    if status_filter:
        query = query.filter(MulesoftRequest.status == status_filter)
    
    total = query.count()
    skip = (page - 1) * page_size
    
    requests = query.order_by(MulesoftRequest.created_at.desc()).offset(skip).limit(page_size).all()
    
    return {
        "items": [
            {
                "id": req.id,
                "account_id": req.account_id,
                "name": req.name,
                "request_type": req.request_type,
                "status": req.status,
                "mulesoft_response": req.mulesoft_response,
                "error_message": req.error_message,
                "created_at": req.created_at,
                "updated_at": req.updated_at
            }
            for req in requests
        ],
        "total": total,
        "page": page,
        "page_size": page_size,
        "pages": math.ceil(total / page_size) if total > 0 else 0
    }


@router.get("/requests/{request_id}")
async def get_mulesoft_request(
    request_id: int,
    db: Session = Depends(get_db),
    current_user: User = Depends(get_current_user)
):
    req = db.query(MulesoftRequest).filter(MulesoftRequest.id == request_id).first()
    if not req:
        raise HTTPException(
            status_code=status.HTTP_404_NOT_FOUND,
            detail="Request not found"
        )
    
    return {
        "id": req.id,
        "account_id": req.account_id,
        "request_type": req.request_type,
        "status": req.status,
        "mulesoft_response": req.mulesoft_response,
        "error_message": req.error_message,
        "created_at": req.created_at,
        "updated_at": req.updated_at
    }
